<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CDBDB"
    tools:context="com.example.pc.weatherapp.Main2Activity">


    <TextView
        android:id="@+id/lastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API used: "
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database: "
        android:paddingLeft="5dp"
        android:layout_marginTop="28dp"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toBottomOf="@+id/lastUpdate"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/txtbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="api.openweathermap.org"
        android:paddingLeft="1dp"
        android:layout_marginTop="1dp"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toBottomOf="@+id/txtbox1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/txtbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API key: "
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toBottomOf="@+id/txtbox2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/txtbox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3c8a435aa6d40a43683d8ae3e10ade7b"
        android:paddingLeft="5dp"
        android:layout_marginTop="1dp"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toBottomOf="@+id/txtbox3"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="431dp"
        android:layout_height="322dp"
        app:layout_constraintTop_toBottomOf="@+id/txtbox4"
        app:srcCompat="@drawable/main4"
        tools:layout_editor_absoluteX="-14dp" />

</android.support.constraint.ConstraintLayout>
