<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CDBDB"
    tools:context="com.example.pc.weatherapp.MainActivity">

    <TextView
        android:id="@+id/cityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cityText"
        android:text="- -"
        android:textColor="#fff"
        android:textSize="47dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/cityText"
        app:layout_constraintRight_toRightOf="@+id/cityText" />

    <TextView
        android:id="@+id/Desc"
        android:textColor="#fff"
        android:textSize="28dp"
        android:text="description"
        app:layout_constraintTop_toBottomOf="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tempText"
        app:layout_constraintRight_toRightOf="@+id/tempText"/>

    <TextView
        android:id="@+id/Wind"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Wind"
        android:layout_alignParentLeft="true"
        app:layout_constraintTop_toBottomOf="@+id/Desc"
        android:paddingLeft="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Cloud"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Sky"
        android:paddingLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Wind"
        app:layout_constraintLeft_toLeftOf="@+id/Wind"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Pressure"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Pressure"
        android:paddingLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Cloud"
        app:layout_constraintLeft_toLeftOf="@+id/Cloud"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Humidity"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Humidity"
        android:paddingLeft="25dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/Pressure"
        app:layout_constraintLeft_toLeftOf="@+id/Pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Srise"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Sunrise"
        android:paddingLeft="25dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/Humidity"
        app:layout_constraintLeft_toLeftOf="@+id/Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Sset"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="Sunset"
        android:paddingLeft="25dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/Srise"
        app:layout_constraintLeft_toLeftOf="@+id/Srise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/Sset"
        app:layout_constraintLeft_toLeftOf="@+id/Sset"
        android:id="@+id/btnR"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/btnR"
        app:layout_constraintLeft_toLeftOf="@+id/btnR"
        android:id="@+id/btnGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="412dp" />

</android.support.constraint.ConstraintLayout>
